{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "tag-separator": "@",
  "separate-pull-requests": true,
  "include-v-in-tag": false,
  "plugins": [
    {
      "type": "node-workspace",
      "merge": false
    }
  ],
  "packages": {
    "packages/app-a": {
      "release-type": "node"
    },
    "packages/app-b": {
      "release-type": "node"
    }
  }
}
